<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/space_5dp</item>
        <item name="android:paddingRight">@dimen/space_5dp</item>
        <item name="android:paddingTop">@dimen/space_5dp</item>
        <item name="android:paddingBottom">@dimen/space_5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:tag">@string/font_regular</item>
    </style>
    <!--fontREgular // Normal Font -->
    <style name="lbl_large_reguler_Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>

    <style name="lbl_big_reguler_Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="lbl_medium_reguler_Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="lbl_small_reguler_Style" parent="textViewStyle">
        <item name="android:textSize">@dimen/font_size_10sp</item>
    </style>


    <!--fontlarge  // Light Normal Font -->
    <style name="lbl_large_Style" parent="textViewStyle">
        <item name="android:tag">@string/font_large</item>
    </style>

    <style name="lbl_large_large_Style" parent="lbl_large_Style">
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>
    <style name="EdiytTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/space_10dp</item>
        <item name="android:paddingRight">@dimen/space_10dp</item>
        <item name="android:paddingTop">@dimen/space_10dp</item>
        <item name="android:paddingBottom">@dimen/space_10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:tag">@string/font_regular</item>
    </style>
    <style name="edt_regular_medium_Style" parent="EdiytTextStyle">
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>
</resources>
